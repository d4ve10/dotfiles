#!/usr/bin/env bash

TID=$(xinput list | grep -iPo 'touchpad.*id=\K\d+')

while :
do
    if xinput list | grep -iq mouse; then
      xinput disable "$TID"
      MOUSE_ID=$(xinput list | grep -vi keyboard | grep -i mouse | grep -oP 'id=\K[^\s]*')
      xinput set-prop "$MOUSE_ID" "libinput Accel Profile Enabled" 0 1
    else
      xinput enable "$TID"
    fi
    sleep 1
done
